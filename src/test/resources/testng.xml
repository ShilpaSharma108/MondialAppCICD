<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Mondial Application Test Suite" verbose="1">

    <listeners>
        <listener class-name="com.mondial.listeners.TestListener"/>
    </listeners>

    <parameter name="browser" value="chrome"/>
    <parameter name="os" value="windows"/>
    <parameter name="headless" value="false"/>

    <test name="Login Tests">
        <classes>
            <class name="com.mondial.tests.LoginTest"/>
        </classes>
    </test>

    <test name="User Creation Tests">
        <classes>
            <class name="com.mondial.tests.UserCreationTest"/>
        </classes>
    </test>

    <test name="Zendesk Tests">
        <classes>
            <class name="com.mondial.tests.ZendeskTest"/>
        </classes>
    </test>

    <test name="Natural Account Set CRUD Tests">
        <classes>
            <class name="com.mondial.tests.CR_NaturalAccCRUDTest"/>
        </classes>
    </test>

    <test name="Reporting Segment CRUD Tests">
        <classes>
            <class name="com.mondial.tests.CR_SegmentCRUDTest"/>
        </classes>
    </test>

    <test name=" Reporting Segment Validation Tests">
        <classes>
            <class name="com.mondial.tests.CR_SegmentValidationTest"/>
        </classes>
    </test>

    <test name="Reporting Segment CSV Template Tests">
        <classes>
            <class name="com.mondial.tests.CR_SegmentCSVTemplateTest"/>
        </classes>
    </test>

    <test name="Reporting Segment Options CRUD Tests">
        <classes>
            <class name="com.mondial.tests.CR_SegmentOptionsAllTest"/>
        </classes>
    </test>

    <test name="Customers CSV Upload Tests">
        <classes>
            <class name="com.mondial.tests.CR_CustomersTest"/>
        </classes>
    </test>

    <test name="Customers Grid Tests">
        <classes>
            <class name="com.mondial.tests.CR_CustomersGridTest"/>
        </classes>
    </test>

    <test name="Vendors CSV Upload Tests">
        <classes>
            <class name="com.mondial.tests.CR_VendorsTest"/>
        </classes>
    </test>

    <test name="Vendors Grid Tests">
        <classes>
            <class name="com.mondial.tests.CR_VendorsGridTest"/>
        </classes>
    </test>

</suite>
