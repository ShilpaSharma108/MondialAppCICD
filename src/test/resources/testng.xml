<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Mondial Application Test Suite" verbose="1">

    <listeners>
        <listener class-name="com.mondial.listeners.TestListener"/>
    </listeners>

    <parameter name="browser" value="chrome"/>
    <parameter name="os" value="windows"/>
    <parameter name="headless" value="false"/>

    <test name="Login Tests">
        <classes>
            <class name="com.mondial.tests.LoginTest"/>
        </classes>
    </test>

    <test name="Home Page Tests">
        <classes>
            <class name="com.mondial.tests.HomeTest"/>
        </classes>
    </test>

</suite>
